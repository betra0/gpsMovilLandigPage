---
type Color = "blue" | "red" | "green" | "purple";
type Direction = "left" | "right";

interface Props {
  label?: string;
  color?: Color;
  href?: string;
  direcion?: Direction;
}

const {
  label = "Bot√≥n",
  color = "blue",
  direcion = "right",
  href,
} = Astro.props as Props;

const rotate: Record<Direction, string> = {
  left: "hover:-rotate-2",
  right: "hover:rotate-2",
};

const colors: Record<Color, string> = {
  blue: "bg-blue-700 hover:bg-blue-600 active:bg-blue-900",
  red: "bg-red-600 hover:bg-blue-500 active:bg-red-800",
  green: "bg-green-600 hover:bg-green-500 active:bg-green-800",
  purple: "bg-purple-600",
};

const taild = `rounded-xl p-4 flex items-center gap-2 text-white
  transition-transform duration-300
  hover:scale-110
  ${rotate[direcion]}
  hover:shadow-lg hover:shadow-white/50
  active:scale-95
  ${colors[color]}
`;
---


{href ? (
  <a
    href={href}
    class={taild}
  >
    <slot />
    {label}
  </a>
) : (
  <button
    class={taild}
  >
    <slot />
    {label}
  </button>
)}
